<nav>
  <div class="search-area">
    <div class="search-bar">
      <%# <input type="search"> %>
      <%= form_with url: searches_path, method: :get, local: true do |form| %>
        <%= form.text_field :query, placeholder: '#search' %>
        <%= form.submit "Search", class: "search_button"%>
      <% end %>
      <%# <button>Search</button> %>
    </div>
  </div>
  <div class="logo">
    <h1><%= link_to "tweeter", root_url %></h1>
  </div>
  <div class="profile-container">
    <div class="profile">
      <% if user_signed_in? %>
        <h3 class="name"><%= link_to current_user.name, edit_user_registration_path %></h3>
        <button><%= link_to "Log Out", destroy_user_session_path, method: :delete %></button>
      <% else %>
        <button><%= link_to "Sign In", new_user_session_path %></button>
      <% end %>
    </div>
  </div>
</nav>